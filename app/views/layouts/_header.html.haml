%nav.navbar.navbar-expand-lg.navbar-dark.bg-primary{'aria-label': :"site-nav"}
  %span.navbar-brand Medusa HQ
  %div.navbar-nav
    = link_to('Home', root_path, class: 'nav-link nav-item')
    = link_to('Repositories', repositories_path, class: 'nav-link nav-item')
    = link_to('Collections', collections_path, class: 'nav-link nav-item')
    %div.nav-item.dropdown
      %a.nav-link.dropdown-toggle#navbar-more-link{href: '#', 'data-toggle': :dropdown, 'aria-haspopup': true, 'aria-expanded': false}
        More
      .dropdown-menu{'aria-labelledby': 'navbar-more-link'}
        = link_to('Access Systems', access_systems_path, class: 'dropdown-item')
    - if current_user
      = link_to("Logout (#{current_user.uid})", logout_path, class: 'nav-link nav-item')
    - else
      = link_to('Login', login_path, class: 'nav-link nav-item')
